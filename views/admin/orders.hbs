<section>
    <div class="container">
        <div class="row">
            <table class="table mt-5" id="order-table">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Delevery Details</th>
                        <th scope="col">Total</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col">Status</th>
                        <th scope="col">View</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>Address : {{this.deleveryDetails.address}}<br>
                            Pincode : {{this.deleveryDetails.pincode}}<br>
                            Mobile : {{this.deleveryDetails.mobile}}
                        </td>

                        <td>{{this.totalAmount}} </td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.status}} </td>
                        <td>
                            <a href="/admin/view-order-products/{{this._id}}" class="btn btn-primary">View details</a>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#order-table').DataTable();
    });
</script>