<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/add-product" class="btn btn-success ml-auto ">Add products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.category}} </td>
                    <td><img style="width:50px;height:50px" src="/product-images/{{_id}}.jpg" alt=""></td>
                    <td><a class="btn btn-info" href="/admin/edit-product/{{this._id}}">Edit</a></td>
                    <td><a class="btn btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you want to delete {{this.name}}?')">Delete</a></td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</section>