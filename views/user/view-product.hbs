<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height:30rem;">
                    <img src="/product-images/{{_id}}.jpg" class="card-img-top" style="width: auto; height:200px;"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text">Category:{{this.category}}</p>
                        <p class="card-text">Price:Rs.{{this.price}}</p>

                        <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
</section>