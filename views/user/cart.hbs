<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr>
                    
                    <td><img style="width: 50px;height:50px" src="/product-images/{{this.oneProduct._id}}.jpg"></td>
                    <td>{{this.oneProduct.name}}</td>
                   
                    <td>
                        <button class="cart-item-count mr-3 btn-secondary" onclick="changeQuantity('{{this._id}}','{{this.oneProduct._id}}',-1)">-</button>{{this.quantity}}<button class="cart-item-count mr-3 btn-secondary" onclick="changeQuantity('{{this._id}}','{{this.oneProduct._id}}',1)">+</button>
                    </td>
                    <td>
                        <a href="" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    function changeQuantity(cartId,proId,count){
        $.ajax({
            url:'/change-product-quantity',
            data:{
                cart:cartId,
                oneProduct:proId,
                count:count
            },
            method:'post',
            success:(response)=>{
                alert(response)
            }

        })
    }
</script>